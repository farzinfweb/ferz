{
  "name": "ferz",
  "version": "0.0.6",
  "description": "A library for working with dates and calendars in JS",
  "keywords": [
    "date",
    "immutable",
    "calendar"
  ],
  "homepage": "https://github.com/farzinfweb/ferz/tree/main/packages/ferz#readme",
  "bugs": {
    "url": "https://github.com/farzinfweb/ferz/issues"
  },
  "license": "MIT",
  "author": "Farzin Far <farzin.farzanehnia@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farzinfweb/ferz.git",
    "directory": "packages/ferz"
  },
  "funding": "https://github.com/sponsors/farzinfweb",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./locales": {
      "require": "./dist/locales.cjs",
      "import": "./dist/locales.mjs",
      "types": "./dist/locales.d.ts"
    }
  },
  "files": [
    "dist",
    "*.d.ts",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub"
  },
  "dependencies": {
    "@ferz/locales": "workspace:*"
  },
  "engines": {
    "node": ">=14"
  }
}
